---
import { Image } from "@astrojs/image/components";

type Props = {
  variation: "open" | "close";
  style?: {};
  onClick?: () => void;
};

const { variation, style } = Astro.props;
---

<style>
  button {
    all: unset;
    cursor: pointer;
    display: flex;
  }

  @media (min-width: 769px) {
    button {
      display: none;
    }
  }
</style>
<button style={style} data-toggle-menu>
  <Image
    src={variation === "open" ? "/icon-menu.svg" : "/icon-menu-close.svg"}
    alt="Menu toggle"
    aria-hidden
    width={40}
    height={17}
    format="svg"
  />
</button>
<script>
  const button = document.querySelector("[data-toggle-menu]");

  button?.addEventListener("click", () => {
    console.log("button was clicked");
  });
</script>
